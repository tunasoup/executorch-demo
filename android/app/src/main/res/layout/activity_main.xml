<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Select Model Label -->
        <TextView
            android:id="@+id/modelSelectionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Model"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <!-- Spinner -->
        <Spinner
            android:id="@+id/modelSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/modelSelectionLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Memory Usage -->
        <TextView
            android:id="@+id/modelMemoryText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memory Usage: -"
            app:layout_constraintTop_toBottomOf="@id/modelSpinner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <!-- Select Image Button -->
        <Button
            android:id="@+id/selectImageButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select Input Image"
            app:layout_constraintTop_toBottomOf="@id/modelMemoryText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp" />

        <!-- Input ImageView -->
        <ImageView
            android:id="@+id/inputImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#DDDDDD"
            android:scaleType="centerCrop"
            android:contentDescription="Selected input image preview"
            app:layout_constraintTop_toBottomOf="@id/selectImageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Run Inference Button -->
        <Button
            android:id="@+id/runInferenceButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Run Segmentation"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/inputImageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Inference Time -->
        <TextView
            android:id="@+id/inferenceTimeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inference Time: -"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/runInferenceButton"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Output Label -->
        <TextView
            android:id="@+id/outputLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Segmented Output"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/inferenceTimeText"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Output ImageView -->
        <ImageView
            android:id="@+id/outputImageView"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:background="#EEEEEE"
            android:scaleType="centerCrop"
            android:contentDescription="Segmented output image"
            app:layout_constraintTop_toBottomOf="@id/outputLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
